{
  "manifest_version": 3,
  "name": "Confettify!",
  "version": "0.2",
  "description": "Display confetti in Chrome.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Confettify!"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Ctrl+Shift+E"
      },
      "description": "Launches the confetti effect"
    }
  },
  "icons": {
    "128": "icon-128.png"
  }
}